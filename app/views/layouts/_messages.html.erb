<div class="container">
  <% flash.each do |name,msg|%>
    <div class="alert <%= name == 'alert' ? 'alert-danger' : 'alert-success' %> " role="alert"> 
      <%= msg%>
      <%= name%>
      <button type="button" class="close" data-dismiss="alert"    aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
</div>